{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../common-proto/health.proto",
        "outDir": "./dist/proto/"
      },
      {
        "include": "../common-proto/sample_service/**/*.proto",
        "outDir": "./dist/proto/"
      }
    ],
    "watchAssets": true
  }
}
